{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue",
		"^common-(.*)": "@/components/common-$1/common-$1.vue"
	},
	"pages": [
		//pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/about/index",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}
	],
	"subPackages": [
		{
			"root": "uni_modules/uni-id-pages",
			"pages": [
				{
					"path": "pages/register/register",
					"style": {
						"navigationBarTitleText": "注册"
					}
				},
				{
					"path": "pages/login/login-withoutpwd",
					"style": {
						"navigationBarTitleText": "登录"
					}
				},
				{
					"path": "pages/login/login-withpwd",
					"style": {
						"navigationBarTitleText": "账号密码登录"
					}
				},
				{
					"path": "pages/login/login-smscode",
					"style": {
						"navigationBarTitleText": "手机验证码登录"
					}
				},
				{
					"path": "pages/userinfo/userinfo",
					"style": {
						"navigationBarTitleText": "个人资料"
					}
				},
				{
					"path": "pages/userinfo/bind-mobile/bind-mobile",
					"style": {
						"navigationBarTitleText": "绑定手机号码"
					}
				},
				{
					"path": "pages/userinfo/cropImage/cropImage",
					"style": {
						"navigationBarTitleText": ""
					}
				},
				{
					"path": "pages/register/register-by-email",
					"style": {
						"navigationBarTitleText": "邮箱验证码注册"
					}
				},
				{
					"path": "pages/retrieve/retrieve",
					"style": {
						"navigationBarTitleText": "重置密码"
					}
				},
				{
					"path": "pages/retrieve/retrieve-by-email",
					"style": {
						"navigationBarTitleText": "通过邮箱重置密码"
					}
				},
				{
					"path": "pages/common/webview/webview",
					"style": {
						"enablePullDownRefresh": false,
						"navigationBarTitleText": ""
					}
				},
				{
					"path": "pages/userinfo/change_pwd/change_pwd",
					"style": {
						"enablePullDownRefresh": false,
						"navigationBarTitleText": "修改密码"
					}
				},
				{
					"path": "pages/register/register-admin",
					"style": {
						"enablePullDownRefresh": false,
						"navigationBarTitleText": "注册管理员账号"
					}
				},
				{
					"path": "pages/userinfo/set-pwd/set-pwd",
					"style": {
						"enablePullDownRefresh": false,
						"navigationBarTitleText": "设置密码"
					}
				},
				{
					"path": "pages/userinfo/deactivate/deactivate",
					"style": {
						"navigationBarTitleText": "注销账号"
					}
				},
				{
					"path": "pages/userinfo/realname-verify/realname-verify",
					"style": {
						"enablePullDownRefresh": false,
						"navigationBarTitleText": "实名认证"
					}
				}
			]
		},
    // 工地模块分包
    {
      "root": "pages/site",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": "工地管理",
            "enablePullDownRefresh": true
          }
        },
        {
          "path": "add",
          "style": {
            "navigationBarTitleText": "添加工地"
          }
        },
        {
          "path": "detail",
          "style": {
            "navigationBarTitleText": "工地详情"
          }
        }
      ]
    },
    // 工人模块分包
    {
      "root": "pages/worker",
      "pages": [
        {
          "path": "index",
          "style": {
            "navigationBarTitleText": "工人管理",
            "enablePullDownRefresh": true
          }
        },
        {
          "path": "add",
          "style": {
            "navigationBarTitleText": "添加工人"
          }
        },
        {
          "path": "detail",
          "style": {
            "navigationBarTitleText": "工人详情"
          }
        }
      ]
    }
	],
	"tabBar": {
		"color": "#969799",
		"selectedColor": "#17A1FF",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"text": "首页",
				"iconPath": "/static/images/tabbar/manage.png",
				"selectedIconPath": "/static/images/tabbar/manage_select.png"
			},
			{
				"pagePath": "pages/about/index",
				"text": "我的",
				"iconPath": "/static/images/tabbar/message.png",
				"selectedIconPath": "/static/images/tabbar/message_select.png"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {
		// "loginPage": "/pages/about/index"
		// "uniIdRedirectUrl": "/pages/about/index"
	}
}
