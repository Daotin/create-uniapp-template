{
  "bsonType": "object",
  "required": ["name", "createTime", "updateTime"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "title": "工地名称",
      "description": "工地名称",
      "trim": "both"
    },
    "address": {
      "bsonType": "string",
      "title": "工地地址",
      "description": "工地地址",
      "trim": "both"
    },
    "remark": {
      "bsonType": "string",
      "title": "备注",
      "description": "备注信息",
      "trim": "both"
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "创建时间",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "updateTime": {
      "bsonType": "timestamp",
      "title": "更新时间",
      "description": "更新时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
} 