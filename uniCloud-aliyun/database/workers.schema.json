{
  "bsonType": "object",
  "required": ["name", "createTime", "updateTime"],
  "permission": {
    "read": true,
    "create": true,
    "update": true,
    "delete": true
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "name": {
      "bsonType": "string",
      "title": "工人姓名",
      "description": "工人姓名",
      "trim": "both"
    },
    "phone": {
      "bsonType": "string",
      "title": "联系电话",
      "description": "联系电话",
      "trim": "both",
      "pattern": "^$|^1[3-9]\\d{9}$",
      "errorMessage": {
        "pattern": "手机号码格式不正确"
      }
    },
    "remark": {
      "bsonType": "string",
      "title": "备注",
      "description": "备注信息",
      "trim": "both"
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "创建时间",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "updateTime": {
      "bsonType": "timestamp",
      "title": "更新时间",
      "description": "更新时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
} 